{
  "manifest_version": 2,

  "name": "break-my-firefox-certs-issue",
  "description": "Makes HTTPS warning not work",
  "version": "0.0.1",
  "icons": {
    "128": "images/extensionIcon.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "128": "images/extensionIcon.svg"
    }
  }
}
